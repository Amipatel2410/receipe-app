<%# views/receipe/new.ejs %>

<h1>Create a new Receipe</h1>

<form action="/receipe" method="POST">
  <label for="title">Title</label>
  <input id="title" type="text" name="title" placeholder="Title here" />

  <br />
  <label for="picture"> Picture URL </label>
    <input type="text" name="picture" value="picture" placeholder="Picture Url" />

  <br />

  <label for="direction">Direction</label>
  <input id="direction" type="text" name="direction" placeholder="Direction here" />
  <textarea name="text" cols="40" rows="5"></textarea>

  <br />

  <input type="submit" value="Create the Receipe!" />
</form>

<a href="/user">Cancel</a>
