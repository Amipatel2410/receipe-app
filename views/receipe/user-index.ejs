


<% include ../partials/boilerplate %>


<%# views/receipe/index.ejs %>
<h1> <%= user.username %> </h1>
<a href="/receipe/new">Add a new receipe!</a>
<% if(receipe.length == 0) {%>
  <h1>User has no recipes</h1>
<% } else {%>
<% receipe.forEach(receipe => { %>
  <div class="receipe">
    <h4>
      <a href="<%= `/receipe/${receipe.id}` %>">
        <%= receipe.title %>
      </a>
    </h4>
    <img src="<%= receipe.picture%>" alt="<%= receipe.title %>" />
    <p><%= receipe.direction %></p>
  </div>
<% }) // end of foreach%>
<% } // end of Else %>

<% include ../partials/end %>
